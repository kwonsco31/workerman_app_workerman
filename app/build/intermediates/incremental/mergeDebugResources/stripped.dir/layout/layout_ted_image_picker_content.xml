    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/layout_ted_image_picker_content_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <FrameLayout
            android:id="@+id/view_selected_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ted_image_picker_selected_view_height"
            android:background="@color/ted_image_picker_toolbar_background">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_selected_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="binding_1"                               
                                          
                                          />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                tools:listitem="@layout/item_gallery_media" />

            <gun0912.tedimagepicker.base.FastScroller
                android:id="@+id/fast_scroller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end" />
        </FrameLayout>
    </LinearLayout>
         